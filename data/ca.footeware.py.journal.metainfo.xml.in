<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>ca.footeware.py.journal</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Journal</name>
  <summary>An encrypted daily journal</summary>
  <description>
    <p>Stores password-encrypted files that are navigable via application's built-in calendar.</p>
  </description>

  <developer id="tld.vendor">
    <name>Craig Foote</name>
  </developer>

